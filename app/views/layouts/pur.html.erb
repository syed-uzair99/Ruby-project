<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body, html {
  height: 100%;
  margin: 0;
}
.bg {
  background-image: url("https://t4.ftcdn.net/jpg/03/20/68/71/360_F_320687108_3UZ13l44Ob5cel208W7DaRnD5BR9DfY7.jpg");
  background-repeat: no-repeat;
  background-size: 100% 100%;
  font-size: 40px;
  text-align:left;
}
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 25%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 5px;
}
</style>
</head>
<body>
<div class="bg">
<b>Purchase Details</b> <br> <br>
  <table
  <tr>
    <th>Category</th>
    <th>Item</th>              
    <th>Quantity</th>                      
    <th>Cost</th>
    <th>Date/Time</th>
  </tr>
 <% @i.each do |m| %>
  <tr>
    <td><%= m.CategoryName %></td>         
    <td><%= m.ItemName %></td> 
    <td><%= m.TotalQuantity %></td>  
    <td><%= m.TotalCost %></td>
    <td><%= m.DateofSale %></td>    
  </tr>
  <% end %>
 </table> 
 <hr>
 <%= button_to "Log out", destroy_user_session_path, method: :delete %>
 <%= button_to "Buy", form_path, method: :get %>
</div>
</body>
</html>


